include includes/utils.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Guest Review
  body
    form(class="kitchen-review-form")
      label(for="starRating") Star Rating
      select(id="starRating" name="starRating" required)
        option(value=1) 1
        option(value=2) 2
        option(value=3) 3
        option(value=4) 4
        option(value=5) 5
      label(for="cleanRating") Cleanliness Rating
      select(id="cleanRating" name="cleanRating" required)
        option(value=1) 1
        option(value=2) 2
        option(value=3) 3
        option(value=4) 4
        option(value=5) 5
      +createInput("checkbox", "featureBool", "featureBool", "As Described", false, false)
      +createInput("text", "comments", "comments", "Comments", false, true)
      button(type="submit") Submit
    script(src="/scripts/kitchen-review.js")