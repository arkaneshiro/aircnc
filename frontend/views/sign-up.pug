include includes/utils.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sign Up
  body
    .sign-up
      form(class="sign-up-form")
        +createInput("input", "username", "sign-up-form__username", "userName", "Username", true, false, "username")
        +createInput("input", "firstName", "sign-up-form__firstName","firstName", "First Name", true, false)
        +createInput("input", "lastName", "sign-up-form__lastName", "lastName", "Last Name", true, false)
        +createInput("email", "userEmail", "sign-up-form__email", "email", "Email", true, false, "username")
        label(for="roles") Roles
        select(id="roles" class="sign-up-form__roleId" name="roleId")
          option(value=1) Host
          option(value=2) Renter
        +createInput("password", "password", "sign-up-form__password", "password", "Password", true, false, "new-password")
        +createInput("password", "confirmPassword", "sign-up-form__confirmPassword", "confirmPassword", "Confirm Password", true, false, "new-password")
        button(type="submit") Sign Up
    script
      include ../public/scripts/signup.js